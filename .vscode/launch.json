{
  "version": "0.1.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Debugging with pdb",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/debug",
      "args": ["example_app.main:app"]
    },
    {
      "name": "Python: Debugging with uvicorn",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "cwd": "${workspaceFolder}/debug",
      "args": [
        "example_app.main:app"
      ]
    }
  ]
}